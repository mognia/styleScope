{
  "manifest_version": 3,
  "name": "StyleScope",
  "version": "1.0",
  "description": "Inspect Tailwind & Bootstrap classes on hover, copy, edit or delete",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icons/16/icon-16.png",
      "48": "./icons/48/icon-48.png",
      "128": "./icons/128/icon-128.png"
    }
  },
  "icons": {
    "16": "./icons/16/icon-16.png",
    "48": "./icons/48/icon-48.png",
    "128": "./icons/128/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
