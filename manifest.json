{
  "manifest_version": 3,
  "name": "Style Scope",
  "version": "1.0",
  "description": "Inspect and edit Tailwind CSS classes in real-time.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16/icon-16.png",
      "48": "icons/48/icon-48.png",
      "128": "icons/128/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/16/icon-16.png",
    "48": "icons/48/icon-48.png",
    "128": "icons/128/icon-128.png"
  }
}