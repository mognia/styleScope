{
  "manifest_version": 3,
  "name": "StyleScope",
  "version": "1.0",
  "description": "Inspect Tailwind & Bootstrap classes on hover, copy, edit or delete",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
